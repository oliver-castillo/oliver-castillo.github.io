---
interface Props {
  id: string;
  title: string;
}
const { id, title } = Astro.props;
---

<section id={id} class="mx-auto px-4 w-full md:w-[740px] mb-12 pt-20">
  <div class="flex gap-x-4 mb-8">
    <slot name="icon" class="size-10" />
    <h2 class="text-2xl md:text-3xl">{title}</h2>
  </div>
  <slot />
</section>
